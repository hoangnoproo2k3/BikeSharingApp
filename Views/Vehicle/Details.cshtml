@model BikeSharingApp.Models.DetailBikeViewModel

@{
    ViewData["Title"] = $"{Model.BikeName} - Thông tin chi tiết";
}

<style>
    .bike-details {
        background-color: #f8f9fa;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .bike-image {
        height: 500px;
        object-fit: cover;
        width: 100%;
    }

    .detail-section {
        padding: 2rem;
    }

    .price-tag {
        background-color: #28a745;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: bold;
    }

    .btn-action {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        border-radius: 50px;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s;
    }

    .btn-action:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="container my-5">
    <div class="bike-details">
        <div class="row g-0">
            <div class="col-lg-6">
                <img src="@Model.Bike.Img" alt="@Model.Bike.BikeName" class="bike-image">
            </div>
            <div class="col-lg-6 detail-section">
                <h1 class="mb-4 text-primary">@Model.Bike.BikeName</h1>

                <div class="mb-4">
                    <span class="price-tag me-3">$@Model.Bike.Price/Ngày</span>
                    <span class="text-muted">$@Model.Bike.PricePerHour/giờ</span>
                </div>

                <h5 class="mb-2 text-secondary">Vị trí</h5>
                <p class="mb-4 fs-5">@(Model.Bike.Location?.Name ?? "Chưa có thông tin")</p>

                <h5 class="mb-2 text-secondary">Mô tả</h5>
                <p class="mb-4">@Model.Bike.Description</p>

                <div class="d-flex justify-content-between align-items-center">
                    @if (!Model.Check)
                    {
                        <a asp-controller="Bikes" asp-action="Edit" asp-route-id="@Model.Bike.Id"
                            class="btn btn-primary btn-action">
                            <i class="fas fa-edit me-2"></i>Chỉnh sửa
                        </a>
                        <a class="btn btn-outline-secondary btn-action" asp-controller="Account" asp-action="Profile">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại
                        </a>
                    }
                    else
                    {
                        <a asp-action="Book" asp-route-id="@Model.Bike.Id" class="btn btn-success btn-action">
                            <i class="fas fa-book me-2"></i>Đặt ngay
                        </a>
                        <a class="btn btn-outline-secondary btn-action" asp-controller="Vehicle" asp-action="Search">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>