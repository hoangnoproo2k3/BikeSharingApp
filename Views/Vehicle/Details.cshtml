@model BikeSharingApp.Models.DetailBikeViewModel

@{
    ViewData["Title"] = $"{Model.BikeName} - Bike Details";
}
<style>
    .image-container {
        overflow: hidden;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .btn-lg {
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
    }
</style>
<div class="container my-5">
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="image-container">
                <img src="@Model.Bike.Img" alt="@Model.Bike.BikeName" class="img-fluid rounded shadow-sm"
                    style="width: 100%; height: 400px; object-fit: cover;">
            </div>
        </div>
        <div class="col-lg-6">
            <h1 class="mb-3 text-primary">@Model.Bike.BikeName</h1>
            <div class="bg-light p-4 rounded shadow-sm mb-4">
                <div class="row">
                    <div class="col-6 mb-3">
                        <h5 class="text-muted">Price</h5>
                        <p class="h4">$@Model.Bike.Price</p>
                    </div>
                    <div class="col-6 mb-3">
                        <h5 class="text-muted">Price Per Hour</h5>
                        <p class="h4">$@Model.Bike.PricePerHour</p>
                    </div>
                    <div class="col-12 mb-3">
                        <h5 class="text-muted">Location</h5>
                        <p class="h5">@(Model.Bike.Location?.Name ?? "N/A")</p>
                    </div>
                </div>
            </div>
            <h5 class="mb-3 text-muted">Description</h5>
            <p class="lead mb-4">@Model.Bike.Description</p>
            <div class="d-flex justify-content-between">
                @if (!Model.Check)
                {
                    <a asp-controller="Bikes" asp-action="Edit" asp-route-id="@Model.Bike.Id"
                        class="btn btn-primary btn-lg">
                        <i class="fas fa-edit me-2"></i>Edit
                    </a>
                    <a class="btn btn-outline-secondary btn-lg" asp-controller="Account" asp-action="Profile">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                }
                else
                {
                    <a asp-action="Book" asp-route-id="@Model.Bike.Id" class="btn btn-success btn-lg">
                        <i class="fas fa-book me-2"></i>Book Now
                    </a>
                    <a class="btn btn-outline-secondary btn-lg" asp-controller="Vehicle" asp-action="Search">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                }

            </div>
        </div>
    </div>
</div>
