@model BikeSharingApp.Models.ProfileViewModel
@{
    ViewData["Title"] = "Bài đăng của bạn";
    var defaultImage = "/images/xemau.jpg";
}
<style>
    .thumbnail-container {
        width: 100px;
        height: 100px;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .thumbnail-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .table th,
    .table td {
        vertical-align: middle;
    }

    .action-icons {
        font-size: 1.5em;
        display: flex;
        gap: 10px;
    }

    .action-icons a {
        color: #007bff;
        text-decoration: none;
    }

    .action-icons a:hover {
        color: #0056b3;
    }
</style>

<div class="row mt-5">
    <div class="col-12">
        <h2 class="mb-4">Phương tiện của bạn</h2>
        <div class="table-responsive">
            <table class="table ">
                <thead>
                    <tr>
                        <th>Hình ảnh</th>
                        <th>Tên phương tiện</th>
                        <th>Giá</th>
                        <th>Giá/giờ</th>
                        <th>Địa điểm</th>
                        <th>Mô tả</th>
                        <th>Phê duyệt</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var bike in Model.CreatedBikes)
                    {
                        <tr>
                            <td class="thumbnail-container">
                                <img src="@(!string.IsNullOrEmpty(bike.Img) ? bike.Img : defaultImage)"
                                    alt="@bike.BikeName">
                            </td>
                            <td>@bike.BikeName</td>
                            <td>$@bike.Price</td>
                            <td>$@bike.PricePerHour</td>
                            <td>@bike.Location?.Name</td>
                            <td>@bike.Description</td>
                            <td>
                                <a class="btn btn-outline-primary" asp-controller="Booking" asp-action="Pending"
                                    asp-route-id="@bike.Id" asp-route-bikeId="@bike.Id">Yêu cầu</a>
                            </td>

                            <td class="action-icons">
                                <a asp-controller="Vehicle" asp-action="Edit" asp-route-id="@bike.Id"
                                    title="Sửa">&#9998;</a>
                                <a asp-controller="Vehicle" asp-action="Delete" asp-route-id="@bike.Id"
                                    title="Xóa">&#10060;</a>
                                <a asp-controller="Vehicle" asp-action="Approve" asp-route-id="@bike.Id"
                                    title="Phê duyệt">&#10004;</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
